<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="max.java.pm.login.LoginBean" table="mstuser">
	<id name="email" column="email">
	<generator class ="assigned"/> 
	</id>
	
	<property name="username" column="username"/>
	  <property name="urole"  column="urole"/>
		<property name="pass" column="pass"/>
	  <property name="status"  column="status"/>
	  <property name="cnt" column="cnt"/>
	  <property name="logintime"  column="logintime"/>
	</class>

</hibernate-mapping>
